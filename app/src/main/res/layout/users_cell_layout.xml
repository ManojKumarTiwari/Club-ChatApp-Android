<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_cell_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/users_cell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/users_cell_image"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/users_cell_image"
        android:layout_toRightOf="@+id/users_cell_image"
        android:text="Display Name"
        android:textColor="@android:color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/users_cell_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/users_cell_image"
        android:layout_alignLeft="@+id/users_cell_name"
        android:layout_alignStart="@+id/users_cell_name"
        android:text="Status" />

    <ImageView
        android:id="@+id/user_cell_online_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/users_cell_name"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/users_cell_name"
        android:layout_toRightOf="@+id/users_cell_name"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:maxHeight="24dp"
        android:maxWidth="24dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/green_dot" />

</RelativeLayout>